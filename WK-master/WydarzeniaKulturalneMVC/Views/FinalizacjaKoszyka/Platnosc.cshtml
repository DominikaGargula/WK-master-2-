@model WydarzeniaKulturalne.Data.Entities.Zamowienie
@{
    ViewBag.Title = "Płatność";
}


<section class="h-100 h-custom">
    <div class="container h-100 py-5">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <h5>Podsumowanie płatności</h5>
                <div class="card- shadow-2-strong mb-5 mt-4 mb-lg-0" style="border-radius: 16px;">
                    <div class="card-body p-4">
                        <div class="row">
                            <div class="col-md-6 col-lg-4 col-xl-3 mb-4 mb-md-0">
                                <div class="d-flex flex-row pb-3">
                                    <div class="d-flex align-items-center pe-2">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="radioNoLabel1v" value="" checked />
                                    </div>
                                    <div class="rounded border w-100 p-3">
                                        <p class="d-flex align-items-center mb-0">
                                            <i class="fab fa-cc-mastercard fa-2x text-dark pe-2"></i>Credit Card
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex flex-row pb-3">
                                    <div class="d-flex align-items-center pe-2">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="radioNoLabel2v" value="" />
                                    </div>
                                    <div class="rounded border w-100 p-3">
                                        <p class="d-flex align-items-center mb-0">
                                            <i class="fab fa-cc-visa fa-2x fa-lg text-dark pe-2"></i>Debit Card
                                        </p>
                                    </div>
                                </div>
                                <div class="d-flex flex-row">
                                    <div class="d-flex align-items-center pe-2">
                                        <input class="form-check-input" type="radio" name="paymentMethod" id="radioNoLabel3v" value="" />
                                    </div>
                                    <div class="rounded border w-100 p-3">
                                        <p class="d-flex align-items-center mb-0">
                                            <i class="fab fa-cc-paypal fa-2x fa-lg text-dark pe-2"></i>PayPal
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <form action="Platnosc" method="post" class="col-md-6 col-lg-8 col-xl-9">
                                <div class="row">
                                    <div class="col-12 col-xl-6">
                                        <div class="form-group mb-4 mt-2">
                                            <input type="text" class="form-control form-control-lg" name="Imie" placeholder="Imię" />
                                            <!-- Validation messages here -->
                                        </div>

                                        <div class="form-group mb-4">
                                            <input type="text" class="form-control form-control-lg" placeholder="Numer karty" />
                                        </div>

                                        <div class="form-group mb-4">
                                            <input type="text" class="form-control form-control-lg" placeholder="Data ważności" />
                                        </div>
                                    </div>
                                    <div class="col-12 col-xl-6">
                                        <div class="form-group mb-4 mt-2">
                                            <input type="text" class="form-control form-control-lg" name="Nazwisko" placeholder="Nazwisko" />
                                            <!-- Validation messages here -->
                                        </div>

                                        <div class="form-group mb-4">
                                            <input type="password" class="form-control form-control-lg" placeholder="CVV" />
                                        </div>
                                        <div class="form-group mb-4">
                                            <input type="text" class="form-control form-control-lg" placeholder="Kod promocyjny" name="kodPromocyjnyWpis" />
                                            <!-- Error message here -->
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="d-flex justify-content-between" style="font-weight: 500;">
                                        <p class="mb-2">Łączna kwota do zapłaty:</p>
                                        <p>@ViewBag.SumaZamowienia?.ToString("c")</p>
                                    </div>
                                    <div class="text-danger">
                                        <span asp-validation-for="Imie"></span>
                                        <br>
                                        <span asp-validation-for="Nazwisko"></span>
                                        <br>
                                        <p class="text-danger">@TempData["ErrorMessagePlatnosc"]</p>
                                    </div>
                                    <button type="submit" class="btn btn-dark btn-block btn-lg mt-2">Zapłać</button>
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <h6 class="mt-5">
                    <a asp-action="Index" asp-controller="Home" class="text-body"><i class="fas fa-long-arrow-alt-left me-2"></i>Powrót</a>
                </h6>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}