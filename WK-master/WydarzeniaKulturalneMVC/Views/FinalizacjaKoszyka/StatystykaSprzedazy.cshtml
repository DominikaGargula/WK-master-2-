@{
    ViewData["Title"] = "Panel administratora";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    decimal totalSum = 0;
}

<div class="card shadow m-4 p-2">
    <div class="card-header py-3">
        <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-primary admin-table-title">Statystyka sprzedanych biletów </h1>
        </div>
        <div class="d-sm-flex align-items-center justify-content-between mb-2">

            <div id="line-chart" style="width: 600px; height: 400px;"></div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover" id="dataTable" width="100%" cellspacing="0">
                <thead class="admin-table-thead">
                    <tr>
                        <th>
                            Nazwa
                        </th>
                        <th>
                            Lokalizacja
                        </th>
                        <th>
                            Sprzedanych biletów

                        </th>
                        <th class="text-right align-middle">
                            Kwota sprzedaży biletów
                        </th>
                    </tr>
                </thead>
                <tbody class="admin-table-tbody">
                    @foreach (var item in @ViewBag.SprzedazBiletow)
                    {
                        var suma = item.ZyskZMarzy;
                        totalSum += suma;
                        <tr>
                            <td>
                                @item.NazwaWydarzenia
                            </td>
                            <td>
                                @item.MiejsceWydarzenia, @item.NazwaMiejsca
                            </td>
                            <td class="text-center align-middle">
                                @item.LacznaIlosc
                            </td>
                            <td class="text-right align-middle">
                                @item.Zarobek.ToString("c")
                            </td>
                        </tr>
                    }
                </tbody>
                <h6 class="text-right mb-5">Łączna kwota marży ze sprzedaży biletów: @totalSum.ToString("C")</h6>
            </table>
        </div>
    </div>
</div>

<script>
    const dataLine = {
        type: 'line',
        data: {
            labels: etykiety, // Dane z C# dla etykiet
            datasets: [
                {
                    label: 'Suma zamówień',
                    data: dane, // Dane z C# dla sumy zamówień
                    fill: false,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                },
            ],
        },
        options: {
            scales: {
                y: {
                    beginAtZero: true
                }
            }
        }
    };

    new mdb.Chart(document.getElementById('line-chart'), dataLine);
</script>