@model IEnumerable<WydarzeniaKulturalne.Data.Entities.Bilety>

<main>
    <nav class="navbar navbar-expand-lg navbar-darkshadow p-2 navbar-colour mb-5">
        <!-- Container wrapper -->
        <div class="container-fluid mx-5 ">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item active mx-1 ">

                </li>
                <li class="nav-item active mx-1">
                </li>
            </ul>
        </div>
        <!-- Container wrapper -->
        <hr />

    </nav>

    <section class="events-slider mt-5 mb-6">
        <div class="container firstContainer">
            <header align="left">
                <div>
                    <h5>WYNIK WYSZUKIWANIA</h5>
                    <hr />

                </div>
            </header>
            <div class="row g-5">
                @if (Model != null && Model.Any())
                {
                    @foreach (var bilet in Model)
                    {

                        <div class="col-md-4 col-sm-6">
                            <div class="card hover-zoom ripple-surface ripple-surface-light">
                                <div class="row g-0">
                                    <div class="col">
                                        @if (!string.IsNullOrEmpty(@bilet.Wydarzenie?.ZdjecieUrl))
                                        {

                                            <img src="@bilet.Wydarzenie.ZdjecieUrl" class="card-img-f img-fluid" />
                                        }
                                        else
                                        {
                                            <img src="~/Zdjecia/noimage.png" class="card-img-f img-fluid" />
                                        }
                                    </div>


                                    <div class="col">
                                        <div class="card-body d-flex flex-column">
                                            <div class="h-100">
                                                <h5 class="card-title">@bilet.Wydarzenie?.Nazwa</h5>
                                            </div>
                                            <div class="col">
                                                <p class="card-text">
                                                    <small class="text-muted">
                                                        Najbliższe wydarzenie:
                                                    </small>
                                                    @bilet.DataWydarzenia.ToShortDateString()
                                                </p>
                                                <div class="text-end">
                                                    <a asp-controller="Bilety" asp-action="DetailsCard" asp-route-id="@bilet.Id" class="btn btn-dark">
                                                        Kup bilet
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                           <div>
                        <h6 class="mb-0">
                            <a asp-controller="Home" asp-action="Index" class="text-body">
                                <i class="fas fa-long-arrow-alt-left me-2"></i>Powrót
                            </a>
                        </h6>
                    </div>
                    }
                }
                else
                {
                    <div class="col mb-5">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-3">
                                <h5 class="card-title"> Brak wyniku spełniającego kryteria</h5>
                            </div>

                        </div>
                    </div>
                    <div>
                        <h6 class="mb-0">
                            <a asp-controller="Home" asp-action="Index" class="text-body">
                                <i class="fas fa-long-arrow-alt-left me-2"></i>Powrót
                            </a>
                        </h6>
                    </div>
                }
            </div>
        </div>
    </section>
</main>