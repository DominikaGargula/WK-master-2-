            </div>
            <!--Grid column-->
            <!--Grid column-->
            <div class="col-md-6 mb-4">
                <!--Content-->
                <div class="p-4">
                    <div class="mb-3">
                        <a href="">
                            <span class="badge bg-dark me-1">@Model.KategoriaWydarzenia.Nazwa</span>
                        </a>
                        <a href="">
                            <span class="badge bg-info me-1">New</span>
