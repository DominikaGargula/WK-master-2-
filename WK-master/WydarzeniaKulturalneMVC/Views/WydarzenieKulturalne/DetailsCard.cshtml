<style>

    .nameDetails {
        display: inline-block
    }

    .bg-details {
        background-color: none;
        border-radius: 8px
    }
        .bg-details:hover {
            background-color: #f8fafb;
            color: #08183a;
            cursor: pointer;
        }
            .bg-details:hover .fa-check,
            .bg-details:hover .fa-minus {
                background-color: #f8fafb;
                color: #08183a;
            }

    .btn-details-header {
        background-color: transparent;
        color: #08183a;
        box-shadow: none;
        cursor: pointer;
    }
        .btn-details-header:hover {
            background-color: #f8fafb;
            color: #de753f;
            cursor: pointer;
            box-shadow:none;
        }

    .table-details thead th,
    .table-details td {
        border: none
    }

    .table-details tbody td:first-child {
        border-bottom-left-radius: 10px;
        border-top-left-radius: 10px
    }

    .table-details tbody td:last-child {
        border-bottom-right-radius: 10px;
        border-top-right-radius: 10px
    }

    .h5-detail {
        text-transform: uppercase;
        color: #de753f;
    }

    #spacing-row-details {
        height: 9px;
    }
</style>
<main class="mt-2 pt-4">
    <div class="container mt-2">
        <!--Grid row-->
        <div class="row">
            <!--Grid column-->
            <div class="col-md-6 mb-4 " style="width: 20rem;">
                @if(string.IsNullOrEmpty(Model.ZdjecieUrl))
