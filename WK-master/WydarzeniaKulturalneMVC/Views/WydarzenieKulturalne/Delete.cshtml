@model WydarzeniaKulturalne.Data.Entities.WydarzenieKulturalne

@{
    ViewData["Title"] = "Wydarzenia";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card shadow m-4 p-4">
    <h4 class="ml-3 mb-3 py-3"> Usuwanie</h4>

    <div class="row">
        <div class="col-lg-8 offset-lg-2 ">

            <h3>Czy jesteś pewien, że chcesz usunąć ten obiekt?</h3>
            <div class="mt-4 mb-4">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-warning">Powrót</a>
                    <input type="submit" value="Usuń" class="btn btn-danger" />            
                </form>
            </div>
        </div>
    </div>
</div>