<script type="text/javascript">
    $(document).ready(function () {
        $(".Usuwanie").click(function () {
            var recordToDelete = $(this).data("id");
            if (recordToDelete !== '') {
                $.ajax({
                    url: "/Koszyk/UsunZKoszyka",
                    type: "POST",
                    data: { "id": recordToDelete },
                    success: function (data) {
                         location.reload(true);
                    }
                });
            }
        });
    });
</script>
